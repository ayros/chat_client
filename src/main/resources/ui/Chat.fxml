<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ayros.chat_client.ui.Chat">

    <ListView>

    </ListView>
   <center>
      <ListView id="chatList" fx:id="chatList" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Button id="send" fx:id="send" mnemonicParsing="false" onAction="#send" text="Send" BorderPane.alignment="CENTER">
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="2.0" />
               </opaqueInsets>
               <BorderPane.margin>
                  <Insets left="8.0" right="8.0" />
               </BorderPane.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </right>
         <center>
            <TextArea id="input" fx:id="input" prefRowCount="1" wrapText="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
         </center>
      </BorderPane>
   </bottom>
</BorderPane>
